{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build sfml app",
      "type": "shell",
      "command": "g++",
      "args": [
        "main.cpp",
        "-IC:/SFML-3.0.2/include",
        "-LC:/SFML-3.0.2/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system",
        "-o", "app.exe"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    }
  ]
}
